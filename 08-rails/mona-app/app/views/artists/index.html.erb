<h3>All Artists</h3>

<ul>
  <% @artists.each do |artist| %>
    <li>

      <%= image_tag( artist.image, :class => "thumbnail" ) %>
      <ul>
        <!-- <li><%= artist.to_json %></li> -->
        <li>
          Name: <%= link_to(artist.name, "/artists/#{artist.id}") %>
        </li>
        <li>Nationality: <%= artist.nationality %></li>
        <li>Date of birth: <%= artist.dob %></li>
        <li>Period: <%= artist.period %></li>
      </ul>

    </li>
  <% end %>
</ul>
