<h3>Create a new artist</h3>

<!-- Secure, reusable, assists with prefilling values -->
<%= form_for @artist do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.label :nationality %>
    <%= f.text_field :nationality, :required => true %>
  </p>
  <p>
    <%= f.label :dob %>
    <%= f.date_field :dob, :required => true %>
  </p>
  <p>
    <%= f.label :period %>
    <%= f.text_field :period, :required => true %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.url_field :image, :required => true %>
  </p>

  <%= f.submit %>
<% end %>
