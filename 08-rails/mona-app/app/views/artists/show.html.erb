<h3>Artist: <%= @artist.name %></h3>

<%= image_tag @artist.image %>

<ul>
  <li>Nationality: <%= @artist.nationality %></li>
  <li>Date of birth: <%= @artist.dob %></li>
  <li>Period: <%= @artist.period %></li>
</ul>

<div class="controls">
  <%= link_to "Edit Artist", "/artists/#{@artist.id}/edit" %>
  <%= link_to "Delete Artist", "/artists/#{@artist.id}", :method => :delete, :data => { :confirm => "Are you sure?" } %>
</div>

