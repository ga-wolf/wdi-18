<!DOCTYPE html>
<html>
<head>
  <title>Tunr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%# if session[:home] %>
    <!-- <h1> -->
      <%#= session[:home] %>
    <!-- </h1> -->
  <%# end %>

  <% if flash[:success] %>
    <h5>
      <%= flash[:success] %>
    </h5>
  <% end %>

  <% if flash[:error] %>
    <h5>
      <%= flash[:error] %>
    </h5>
  <% end %>

  <% if session[:user_id] %>
    <h2>
      You are logged in as the user with the ID of <%= session[:user_id] %>
    </h2>
  <% end %>

  <h1>Tunr</h1>

  <nav>
    <%= link_to "Home", root_path %> |
    <%= link_to "All Users", users_path %> |
    <%= link_to "Sign Up", new_user_path %> |
    <%= link_to "Login", login_path %> |
    <%= link_to "Logout", login_path, :method => :delete %>
  </nav>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
